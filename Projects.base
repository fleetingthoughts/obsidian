formulas:
  Progress: (file.backlinks.length/number(sections)*100).round(2)+"%"
  Benchmark progress: |+
    if(number(milestones)*7/3 < (deadline-today()).days,0, ((number(milestones)*7/3-(deadline-today()).days)/(number(milestones)*7/3)*100).round(3))+"%"

properties:
  formula.Benchmark progress:
    displayName: Scheduled Progress
  note.sections:
    displayName: Real Sections
views:
  - type: table
    name: Table
    filters:
      and:
        - file.hasProperty("project")
    order:
      - file.name
      - deadline
      - formula.Progress
      - formula.Benchmark progress
      - milestones
      - sections
    sort:
      - property: formula.Progress
        direction: DESC
      - property: formula.Benchmark progress
        direction: DESC
      - property: deadline
        direction: ASC
    columnSize:
      file.name: 371
      formula.Progress: 106
      formula.Benchmark progress: 158
